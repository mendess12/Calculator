<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hesaplama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="0"
        android:textSize="35sp"
        android:textAlignment="textEnd"
        android:paddingTop="100dp"
        android:paddingRight="20dp"
        android:paddingBottom="50dp"
        android:inputType="number" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/sayi7"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#BEC8EB"
                android:onClick="butontik"
                android:text="7"
                android:textSize="35sp" />

            <Button
                android:id="@+id/sayi8"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#BEC8EB"
                android:onClick="butontik"
                android:text="8"
                android:textSize="35sp" />

            <Button
                android:id="@+id/sayi9"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#BEC8EB"
                android:onClick="butontik"
                android:text="9"
                android:textSize="35sp" />

            <Button
                android:id="@+id/carpi"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#418686"
                android:onClick="butonislem"
                android:text="x"
                android:textSize="35sp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/sayi4"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#BEC8EB"
                android:onClick="butontik"
                android:text="4"
                android:textSize="35sp" />

            <Button
                android:id="@+id/sayi5"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#BEC8EB"
                android:onClick="butontik"
                android:text="5"
                android:textSize="35sp" />

            <Button
                android:id="@+id/sayi6"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#BEC8EB"
                android:onClick="butontik"
                android:text="6"
                android:textSize="35sp" />

            <Button
                android:id="@+id/eksi"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#418686"
                android:onClick="butonislem"
                android:text="-"
                android:textSize="35sp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/sayi1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#BEC8EB"
                android:onClick="butontik"
                android:text="1"
                android:textSize="35sp" />

            <Button
                android:id="@+id/sayi2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#BEC8EB"
                android:onClick="butontik"
                android:text="2"
                android:textSize="35sp" />

            <Button
                android:id="@+id/sayi3"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#BEC8EB"
                android:onClick="butontik"
                android:text="3"
                android:textSize="35sp" />

            <Button
                android:id="@+id/arti"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#418686"
                android:onClick="butonislem"
                android:text="+"
                android:textSize="35sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/temizle"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="AC"
                android:onClick="temizle"
                android:textSize="35sp"
                android:backgroundTint="#E84848" />

            <Button
                android:id="@+id/sayi0"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#BEC8EB"
                android:onClick="butontik"
                android:text="0"
                android:textSize="35sp" />

            <Button
                android:id="@+id/bolu"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#418686"
                android:text="/"
                android:onClick="butonislem"
                android:textSize="35sp" />

            <Button
                android:id="@+id/esittir"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="#8197E6"
                android:onClick="butonhesapla"
                android:text="="
                android:textSize="35sp" />
        </TableRow>



    </TableLayout>

</LinearLayout>